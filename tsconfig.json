{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
